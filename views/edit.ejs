<% include ./partials/header %>

    <div class="ui main text container segment"> 
        <div class="ui huge header">Edit <%= blogejs.title %> </div>
        <form class="ui form" action="/blogs/<%=blogejs._id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" value="<%= blogejs.title %>">
            </div>
            <div class="field">
                <label>Image</label>
                 <input type="text" name="blog[image]" value="<%= blogejs.image %>">
            </div>
            <div class="field">
                <label>Blog description</label>
                <!--Whatever we put between the text area tag is prefilled in the form.-->
                <textarea name ="blog[body]"><%= blogejs.body %></textarea>
            </div>
            <input class="ui black basic button" type="submit">
            
        </form>
    </div>

<% include ./partials/footer %>